<div class="card bg-white rounded-md">
    <div class="bg-blue-600 h-20">
        <p class="inset-x-0 top-0 z-50 h-0.5 mt-0.5 bg-white"></p>
    </div>
    <div class="items-center text-center -mt-6">
        <%= link_to root_path do %>
            <div class="avatar online">
                <div class="w-20 h-20 rounded-lg border-double border-4 border-white ">

                   <%= avatar_user %>
                </div>
            </div>
        <% end %>
    </div>
    <div class="card-body ">
        <div class="">
            <span class="font-semibold">Nom</span>:
            <%= send("current_#{current_user_is}").full_name %>
        </div>
        <hr>
        <div class=" my-2">
            <span class="font-semibold">Ecole</span>:
            <%= send("current_#{current_user_is}").full_name %>
        </div>
        <hr>
        <div class="">
            <span class="font-semibold">Niveau</span>:
            <%= link_to "profil" do %>
                <%= send("current_#{current_user_is}").full_name %>
            <% end %>
        </div>
    </div>
</div>