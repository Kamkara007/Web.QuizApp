<%= render "home/feeds/navbars/navbars" %>

<div class="container md:mx-auto pt-20">
    <div class="bg-gray-100 px-1 md:p-8 flex justify-between">
        <!-- Left Side bar -->
        <div class=" hidden md:block md:w-1/5 md:ml-10">
            <div class="w-full py-2">
              <%= render "home/feeds/contents/content/user_profil" %>
            </div>
            <div class="w-full py-2 card bg-white border">
                <%= render "home/feeds/contents/materials/side_material" %>
            </div>
        </div>
        
        <!-- Contents && Feed -->
        <div class=" w-full md:w-3/5 md:mx-4 md:p-2 ">
        <!-- Contents && Feed -->
        
        <div class="py-2">
        <!-- Afficher les material dulevel pour les eleves et les level pour les enseignants -->
        <% if current_user_is == "student" %>
          <div class="">
                <%= render "home/feeds/contents/materials/top_material" %>
                <%= render "home/feeds/contents/content/course" %>
            </div>
        <% else %>
           
          <div class="">
                <%= render "home/feeds/contents/levels/top_level" %>
                <%= render "home/feeds/contents/content/course" %>
            </div>
         
        <% end %>
        </div>
        

        <div class="">
            <%#= render "homepage/feed/navbar/mobile_bottom_navbar" %>
        </div>
        </div>

        <!-- User Profil-->
        <div class="hidden md:block md:w-1/5 md:mr-10">
            <div class="py-2">
                <%= render "home/feeds/schools/school" %>
            </div>
            <div class="py-2">
                <%= render "home/feeds/legals/legal" %>
            </div>
        </div>
    </div>
</div>

<!-- mobile bottom navbar -->
<%= render "home/feeds/navbars/mb_navbar" %>