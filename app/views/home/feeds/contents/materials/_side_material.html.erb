<% if "student" == "#{current_user_is}" %>
<div class="bg-white rounded-md">
    <h2 class="p-2 ">Fil matieres</h2>
    <p class="inset-x-0 top-0 z-50 h-0.5 mt-0.5 bg-blue-600"></p>
    <ul class="flex flex-wrap md:flex-col ">

        <% @feed_materials.each do |fm| %>
            <li class="flex md:w-full p-2">
                <%= link_to fm.title, fm, data:{ turbo_frame: "_top" }, class:"no-underline font-semibold text-black" %>
            </li>
        <% end %>

    </ul>
</div>
